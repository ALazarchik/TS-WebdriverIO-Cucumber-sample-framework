{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "resolveJsonModule": true,
    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "node",
    "pretty": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "baseUrl": "./src",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2015", "es2016", "es2017", "ESNext"],
    "types": ["node", "chai", "webdriverio", "webdriverio/async", "@wdio/cucumber-framework"]
  }
}
